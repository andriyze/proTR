{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": false,
    "removeComments": false,
    "noImplicitAny": true,
    "outDir": "tmp",
    "allowJs": true,
    "types": ["jasmine", "jasminewd2", "node"],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "test/**/*.ts",
    "lib/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
